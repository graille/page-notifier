# Discord webhook URL for notifications
WEBHOOK_DISCORD=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# URL of the webpage to track
WEBPAGE_URL=https://example.com/page-to-monitor

# CSS selector path for the element to track (pipe-separated)
# Examples: "#main", "#main|.content", "#main|.content|#target"
# Leave empty to track the entire page body
WEBPAGE_ELEMENT=

# Time between requests in milliseconds (default: 60000 = 1 minute)
WEBPAGE_RELOAD_TIME=60000

# Standard deviation for random delay in milliseconds (default: 500)
WEBPAGE_RELOAD_STD=500

# Timezone for logging (default: UTC)
# Examples: Europe/Paris, America/New_York, Asia/Tokyo
TIMEZONE=Europe/Paris
